datasource db {
  provider = "postgresql"
}

generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  moduleFormat    = "cjs"
}


enum Role {
  ADMIN
  STUDENT
  TEACHER
}

enum RentalStatus {
  RENTED
  RETURNED
  LATE_RETURN
  EXTENDED
}

model User {
  id              String @id @default(uuid()) @db.Uuid
  email           String @unique
  password        String
  name            String 
  role            Role 
  createdAt       DateTime @default(now())

  rentals         Rental[]
}

model Book {
  id              String @id @default(uuid()) @db.Uuid
  title           String @unique
  year            Int
  authors         String[]
  totalStock      Int
  availableStock  Int 
  createdAt       DateTime @default(now())

  rentals         Rental[]
}

model Rental {
  id            String        @id @default(uuid()) @db.Uuid

  userId        String        @db.Uuid
  bookId        String        @db.Uuid

  rentedAt      DateTime      @default(now())
  dueAt         DateTime
  returnedAt    DateTime?

  status        RentalStatus  @default(RENTED)

  extended      Boolean       @default(false)
  extendedDays  Int?

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user          User          @relation(fields: [userId], references: [id])
  book          Book          @relation(fields: [bookId], references: [id])

  @@index([userId])
  @@index([bookId])
  @@index([status])
}